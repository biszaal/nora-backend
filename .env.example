# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
# IMPORTANT: Do NOT commit your real API key. If you accidentally exposed a key (for example pasting it into chat or a repo), rotate it immediately at https://platform.openai.com/account/api-keys
OPENAI_MODEL=gpt-4

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# Security
API_SECRET_KEY=your_secret_key_for_api_auth

# Allowed Origins (CORS)
ALLOWED_ORIGINS=http://localhost:8081,exp://192.168.1.1:8081
