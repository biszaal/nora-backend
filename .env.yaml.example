# Firebase Functions Environment Variables Example
# Copy this file to .env.yaml and fill in your actual values
# DO NOT commit .env.yaml to version control

# Server Configuration
PORT: "3000"
NODE_ENV: "production"

# OpenAI API
OPENAI_API_KEY: "your_openai_api_key_here"
OPENAI_MODEL: "gpt-3.5-turbo"

# Firebase Admin SDK (will be automatically available in Firebase Functions)
FIREBASE_PROJECT_ID: "your_firebase_project_id"

# Security
API_SECRET_KEY: "your_secret_key_for_api_auth"

# Allowed Origins (CORS)
ALLOWED_ORIGINS: "*"
